<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>New Ticket</h1>
      <%= simple_form_for [@room, @ticket] do |f| %>
        <%= f.input :description, input_html: {rows: 10} %>
        <%= f.submit 'Create Ticket', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</div>