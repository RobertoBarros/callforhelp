<div class="container">

  <h1 class="mb-4 mt-2">Open Rooms</h1>

  <div class="row my-3 justify-content-end">
      <% if policy(Room).create? %>
        <%= link_to 'Create new Room', new_room_path, class: 'btn btn-success' %>
      <% end %>
  </div>



  <% @rooms.each do |room| %>
    <div class="card mb-3">
      <div class="card-body border-left border-success">
        <div class="row">
          <div class="col-10">
            <%= link_to room.name, room_path(room), class: 'text-decoration-none h4' %>
            <div class="text-muted"><%= pluralize room.teachers.count, 'teacher' %></div>
          </div>
          <div class="col-2  text-right">
            <% if policy(room).update? %>
              <%= link_to edit_room_path(room), class: 'btn btn-secondary' do %>
                <i class="fas fa-cog"></i>
              <% end %>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  <% end %>




</div>