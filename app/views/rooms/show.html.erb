<div class="container">

  <div class="row my-3 justify-content-end">
      <%= link_to 'New Ticket', new_room_ticket_path(@room), class: 'btn btn-success' %>
  </div>

  <% @tickets.each_with_index do |ticket, index| %>
    <div class="card mb-3">
      <div class="card-body">
        <div class="row">
            <div class="col-1 d-flex justify-content-center align-items-center">
              <h1><%= index + 1 %></h1>
            </div>
            <div class="col-1 d-flex justify-content-center align-items-center">
              <%= image_tag ticket.student.avatar_url, class: 'avatar-large' %>
            </div>
            <div class="col-8">
              <h5 class="card-title"><%= ticket.student.name %></h5>
              <p class="card-text"><%= ticket.description %></p>

            </div>
            <div class="col-2">
              asdasd
            </div>
        </div>
      </div>
    </div>
  <% end %>


</div>